<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/example_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:textColor="@color/turquoise_blue"
        android:textSize="@dimen/big_font_size"
        tools:text="Exemplo" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/example_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin_size"
        android:hint="Exemplo">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/example_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLength="30"
            android:maxLines="1"
            android:textSize="@dimen/input_font_size" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>