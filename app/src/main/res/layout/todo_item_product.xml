<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/normal_margin_size"
    android:paddingRight="@dimen/normal_margin_size"
    android:paddingTop="@dimen/normal_margin_size">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/small_margin_size">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin_size"
            android:layout_marginTop="@dimen/small_margin_size"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/establishment_id_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:textSize="@dimen/small_font_size"
                    tools:text="503." />

                <TextView
                    android:id="@+id/product_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/turquoise_blue"
                    android:textSize="@dimen/input_font_size"
                    android:textStyle="bold"
                    tools:text="FortÃ­ssimo que quebra a linha" />

            </LinearLayout>

            <TextView
                android:id="@+id/product_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin_size"
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/small_font_size"
                android:textStyle="italic"
                tools:text="(poderoso e contrastante)" />

            <TextView
                android:id="@+id/product_value_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin_size"
                android:textColor="@color/turquoise_blue"
                android:textSize="@dimen/normal_font_size"
                android:textStyle="bold"
                tools:text="R$ 5,50" />

        </LinearLayout>

        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:src="@drawable/ic_add" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/normal_margin_size"
        android:background="@drawable/turquoise_blue_dotted_line"
        android:layerType="software"
        android:paddingTop="@dimen/normal_margin_size" />

</LinearLayout>